@page
@model products_catalog.Pages.LoginUserModel
@inject IHttpContextAccessor Accessor
@{
    //ViewData["ErrorMsg"] = Accessor.HttpContext.Session.GetInt32("ErrorMsg");
    ViewData["UserLogged"] = Accessor.HttpContext.Session.GetInt32("isLogged");
}
<form method="post" class="col-lg-6 offset-lg-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Login</h5>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(User => User.User.UserName, "Login", htmlAttributes: new { @class = "input-group-text", @id = "inputGroup-sizing-sm" })
                </div>
                @Html.EditorFor(User => User.User.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(User => User.User.Password, "Password", htmlAttributes: new { @class = "input-group-text", @id = "inputGroup-sizing-sm" })
                </div>
                @Html.EditorFor(User => User.User.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            </div>
            @if (Convert.ToInt32(ViewData["ErrorMsg"]) == 1)
            {
                <span style="color: red;">Wrong username or/and password.</span>
                <br />
                <br />
                ViewData["ErrorMsg"] = 0;
            }
            else
            {
                <span style="color: red;"></span>
            }
            <input type="submit" class="btn btn-primary" />
        </div>
    </div>
</form>
