@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@{
    ViewData["UserName"] = Accessor.HttpContext.Session.GetString("username");
}

<ul class="navbar-nav">
    @if (Convert.ToInt32(ViewData["UserLogged"]) == 1)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Index" title="Manage">Hello @ViewData["UserName"]!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page-handler="_LoginPartial" method="post">
                <input type="submit" class="nav-link btn btn-link text-dark" asp-page="/Index" asp-page-handler="Logout" value="Logout">
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/LoginUser">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/RegisterUser">Register</a>
        </li>
    }
</ul>
